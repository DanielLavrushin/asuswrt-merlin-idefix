{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./frontend/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "index.ts", "*.d.ts", "vite.config.ts"],
  "exclude": ["node_modules"]
}